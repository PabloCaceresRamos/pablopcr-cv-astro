---
export interface Props {
  name: string;
  company: string;
  position: string;
  text: string;
  image?: string;
}

const { name, company, position, text, image } = Astro.props;
---

<div class="bg-gray-900 p-6 rounded-2xl shadow-lg drop-shadow-[4px_4px_0_#7836cf] flex flex-col gap-4 h-full">
  <div class="flex items-center gap-4">
    <div class="w-12 h-12 rounded-full overflow-hidden bg-gray-800 border-2 border-[#7836cf]">
      {image ? (
        <img src={image} alt={name} class="w-full h-full object-cover" />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-xl font-bold text-white">
          {name.charAt(0)}
        </div>
      )}
    </div>
    <div>
      <h3 class="text-lg font-bold text-white">{name}</h3>
      <p class="text-sm text-[#69c7c7] font-semibold">{position} @ {company}</p>
    </div>
  </div>
  
  <div class="relative">
    <span class="absolute -top-2 -left-1 text-4xl text-[#7836cf] opacity-50">"</span>
    <p class="text-gray-300 italic pl-4 relative z-10 text-sm md:text-base">
      {text}
    </p>
  </div>
</div>
